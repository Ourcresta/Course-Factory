# ============================================
# GURU Production Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# REQUIRED - Application will not start without these
# ============================================

# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/guru_db

# JWT signing secret - use a long random string (64+ chars)
# Generate with: openssl rand -hex 64
SESSION_SECRET=your-super-secure-jwt-secret-minimum-64-characters-long

# OpenAI API key for AI course generation
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# EMAIL SERVICE (Required for OTP/Notifications)
# ============================================

# Resend API key for email delivery
RESEND_API_KEY=re_your-resend-api-key

# From email address (must be verified in Resend)
RESEND_FROM_EMAIL=admin@yourdomain.com

# ============================================
# OPTIONAL - Defaults provided if not set
# ============================================

# Server port (default: 5000)
PORT=5000

# Environment mode
NODE_ENV=production

# ============================================
# FUTURE - Configure when needed
# ============================================

# Razorpay webhook secret for payment processing
# RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Base domain for CORS and redirects
# BASE_DOMAIN=https://guru.yourdomain.com
